{
    // Use IntelliSense to find out which attributes exist for node debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/bin/www",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "dev"
            },
            "sourceMaps": true
        },
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 9929,
            "address": "134.21.57.191",
            "sourceMaps": true,
            "restart": false,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/code",
            "outFiles": [
                "${workspaceRoot}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker",
            "protocol": "inspector",
            "port": 9929,
            "restart": true,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/code",
            "outFiles": [
                "${workspaceRoot}/**/*.js"
            ]
        }
    ]
}